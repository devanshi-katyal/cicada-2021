<%- include("partials/header"); -%>
<h1>Add your request</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" />
    <label>Name</label>
    <input class="form-control" type="text" name="postName" />
    <label>Mobile Number</label>
    <input class="form-control" type="text" name="postMobile" />
    <label>Details</label>
    <textarea
      class="form-control"
      name="postBody"
      rows="5"
      cols="30"
    ></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>
