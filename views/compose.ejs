<%- include("partials/header"); -%>
<main>
  <div class="title">
    <h1 id="title">Add Your Request</h1>
    <p id="description">
      Thank you for making the efforts to help those in need.
    </p>
  </div>
  <form id="survey-form" class="" action="/compose" method="post">
    <div class="form-group">
      <label for="name" id="name-label" class="uno">Title</label>
      <input
        id="name"
        class="form-control"
        type="text"
        placeholder="Enter the title of request"
        name="postTitle"
        required
      />

      <label for="name" id="name-label" class="uno">Name</label>
      <input
        type="text"
        id="name"
        class="form-control"
        placeholder="Enter your name"
        name="postName"
        required
      />

      <label for="number" id="number-label" class="uno">Contact Number</label>
      <input
        type="number"
        id="number"
        class="form-control"
        placeholder="Enter your contact number"
        name="postMobile"
      />

      <label for="pincode" id="pincode-label" class="uno">Enter Pincode</label>
      <input
        type="pincode"
        id="pincode"
        class="form-control"
        placeholder="Enter your pincode"
        name="postpincode"
      />
      <label for="details" class="uno">Details</label>
      <textarea
        id="details"
        class="textarea uno form-control"
        placeholder="Please enter details of your request here..."
        name="postBody"
      ></textarea>
      <button type="submit" id="submit" class="submit" name="button">
        Send your application
      </button>
    </div>
  </form>
</main>
<%- include("partials/footer"); -%>
